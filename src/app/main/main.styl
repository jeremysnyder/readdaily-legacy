header-radius = 2px
bottom-sticky-height = 40px

.logo
  font-family "Times New Roman"
  font-size 1.1em

md-content
  &.main
    min-height "calc(100vh - %s)" % bottom-sticky-height

  md-toolbar
    .md-toolbar-tools
      md-icon
        font-size 36px

    .toolbar-title
      text-align center

  md-card
    md-card-header
      padding 0

      md-card-header-pre
        display inline-block
        width 50px
        text-align center
        background-color #DDD
        border-top-left-radius header-radius
        border-bottom-left-radius header-radius
        color #444
        width 100%

        h3, h4
          margin 5px

      md-card-header-text
        .md-title
          padding-left 5px
          line-height 36px

          &.center
            text-align center

    md-card-content
      padding 0 5px
      .md-button
        text-align center
        background-color #DDD
        color #777
        margin-right 0

md-toolbar
  &.md-bottom-sticky
    background-color lightgray
    color black
    font-size .9em
    line-height 30px
    min-height initial

    div.layout-row
      padding 3px 0
      max-height bottom-sticky-height
      min-height bottom-sticky-height

      button.md-button
        color #222
        font-size 1.2em
        min-width 36px
        line-height 30px
        min-height 30px
        padding 0
        margin 0

      span
        padding 0 10px
        white-space nowrap

md-dialog
  md-dialog-actions
    .md-subheader-content
      font-size .9em
