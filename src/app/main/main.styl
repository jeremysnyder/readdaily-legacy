header-radius = 2px
bottom-sticky-height = 40px

md-content
  &.main
    min-height "calc(100vh - %s)" % bottom-sticky-height

md-toolbar
  .md-toolbar-tools
    button.md-button
      color #222
      font-family "Times New Roman"
      font-size 1.2em
      line-height normal
      min-height inherit
      min-width inherit

  &.md-bottom-sticky
    background-color lightgray
    color black
    font-size .9em

    div.layout-row
      max-height bottom-sticky-height

      span
        padding 0 10px

md-card
  md-card-header
    padding 0

    md-card-header-pre
      display inline-block
      width 50px
      text-align center
      background-color #DDD
      border-top-left-radius header-radius
      border-bottom-left-radius header-radius
      color #777

      h3, h4
        margin 5px

    md-card-header-action
      display inline-block
      float right
      text-align center
      background-color #DDD
      border-top-right-radius header-radius
      border-bottom-right-radius header-radius
      color #777

      button.md-button
        line-height normal
        min-height inherit
        min-width inherit
        margin-left 0
        margin-right 0

    md-card-header-text
      .md-title
        padding-left 5px
        line-height 36px

        &.center
          text-align center

md-dialog
  md-dialog-actions
    .md-subheader-content
      font-size .9em
