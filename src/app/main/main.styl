header-radius = 2px

md-toolbar
  .md-toolbar-tools
    button.md-button
      color #222
      font-family "Times New Roman"
      font-size 1.2em
      line-height normal
      min-height inherit
      min-width inherit

md-card
  md-card-header
    padding 0

    md-card-header-pre
      display inline-block
      width 50px
      text-align center
      background-color #DDD
      border-top-left-radius header-radius
      border-bottom-left-radius header-radius
      color #777

      h3, h4
        margin 5px

    md-card-header-action
      display inline-block
      float right
      text-align center
      background-color #DDD
      border-top-right-radius header-radius
      border-bottom-right-radius header-radius
      color #777

      button.md-button
        line-height normal
        min-height inherit
        min-width inherit
        margin-left 0
        margin-right 0

    md-card-header-text
      .md-title
        padding-left 5px
        line-height 36px

        &.center
          text-align center

md-fab-trigger
  button.md-fab.md-button:not([disabled])
    background-color #656

    &:hover
      background-color #444

md-fab-actions
  button
    span
      color #111
